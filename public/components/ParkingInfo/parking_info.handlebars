{{#if parking}}
    <div class="parking-info">
        <h3 class="parking-info__address">{{parking.address}}</h3>
        <p class="parking-info__lots">Свободно: <strong>{{parking.free_lots}}</strong>/{{parking.all_lots}}</p>
        {{#if favourite}}
            <button class="secondary-button" id="show-on-map_button_{{parking.id}}">На карте</button>
        {{else}}
            <div class="button-container">
                <button class="secondary-button" id="show-on-map_button_{{parking.id}}">На карте</button>
                <button class="outline-button" id="add-parking_button">Добавить</button>
            </div>
        {{/if}}
    </div>
{{/if}}